<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watermarkSettingBar"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:padding="6dp"
    android:gravity="center_vertical"
    android:background="#66000000">

    <!-- 水印文字输入框 -->
    <EditText
        android:id="@+id/watermark_text"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:hint="请输入水印文字"
        android:maxLength="20"
        android:paddingStart="8dp"
        tools:ignore="RtlSymmetry" />

    <!-- 不透明度调节 SeekBar -->
    <SeekBar
        android:id="@+id/watermark_alpha"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="100"
        android:progressTint="@color/white"
        android:thumb="@drawable/seekbar_thumb"/>

    <ImageButton
        android:id="@+id/btnConfirm"
        style="@style/AddTextToolButtonStyle"
        android:src="@drawable/ic_addtext_done"
        android:contentDescription="@string/AddTextDone"/>

</LinearLayout>
