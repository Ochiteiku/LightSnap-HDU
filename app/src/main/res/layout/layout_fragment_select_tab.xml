<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="1dp"
    android:background="#66000000"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_frame_style_one"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_square_frame"
        android:background="@drawable/bg_select_common"
        />
    <ImageView
        android:id="@+id/iv_frame_style_two"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:padding="1dp"
        android:src="@drawable/ic_oval_frame"
        android:background="@drawable/bg_select_common"
        />
    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/contact_default_text" />

    <ImageView
        android:id="@+id/iv_frame_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="12dp"
        android:background="@drawable/bg_select_common"
        android:src="@drawable/bg_oval_white" />

    <ImageView
        android:id="@+id/iv_frame_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/bg_select_common"
        android:src="@drawable/bg_oval_white" />

    <ImageView
        android:id="@+id/iv_frame_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:background="@drawable/bg_select_common"
        android:src="@drawable/bg_oval_white" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/contact_default_text" />

    <TextView
        android:id="@+id/tv_select_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_white_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_black_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_red_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/red" />

        <TextView
            android:id="@+id/tv_green_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/green" />

        <TextView
            android:id="@+id/tv_blue_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/tv_yellow_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/yellow" />


    </LinearLayout>

</LinearLayout>
