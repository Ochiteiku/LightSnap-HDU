<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="1dp"
    android:background="#66000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Arrow Style Options -->
    <ImageView
        android:id="@+id/iv_arrow_solid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_select_common"
        android:padding="2dp"
        android:src="@drawable/ic_arrow_solid" />

    <ImageView
        android:id="@+id/iv_arrow_dashed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_select_common"
        android:padding="2dp"
        android:src="@drawable/ic_arrow_dashed" />

    <SeekBar
        android:id="@+id/iv_arrow_width"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:max="20"
        android:min="1"
        android:progress="5"
        android:thumb="@drawable/seekbar_thumb"/>

    <!-- Selected Color Display -->
    <TextView
        android:id="@+id/tv_select_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white" />

    <!-- Color Options in One Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_white_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_black_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_red_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/red" />

        <TextView
            android:id="@+id/tv_green_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/green" />

        <TextView
            android:id="@+id/tv_blue_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/tv_yellow_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/tv_purple_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/purple" />

        <TextView
            android:id="@+id/tv_gray_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/gray" />
    </LinearLayout>
</LinearLayout>