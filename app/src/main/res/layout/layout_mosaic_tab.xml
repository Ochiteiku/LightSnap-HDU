<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="1dp"
    android:background="#66000000"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_mosaic_style_one"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_select_common"
        android:src="@mipmap/iv_mosaic_two"
        />
    <ImageView
        android:id="@+id/iv_mosaic_style_two"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@mipmap/iv_mosaic_one"

        android:layout_marginEnd="4dp"
        android:padding="1dp"
        android:background="@drawable/bg_select_common"
        />
    <ImageView
        android:id="@+id/iv_mosaic_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="12dp"
        android:background="@drawable/bg_select_common"
        android:src="@drawable/bg_oval_white" />

    <ImageView
        android:id="@+id/iv_mosaic_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/bg_select_common"
        android:src="@drawable/bg_oval_white" />

    <ImageView
        android:id="@+id/iv_mosaic_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:background="@drawable/bg_select_common"
        android:src="@drawable/bg_oval_white" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/contact_default_text" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模糊度"
        android:textColor="@color/white"
        tools:text="模糊度" />

    <SeekBar
        android:id="@+id/sb_mosaic_blur"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:progressTint="@color/white"
        android:max="100"

        android:thumb="@drawable/seekbar_thumb" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/contact_default_text" />



</LinearLayout>
