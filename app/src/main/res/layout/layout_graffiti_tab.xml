<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="1dp"
    android:background="#66000000"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_mosaic_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_select_common"
        android:padding="12dp"
        android:src="@drawable/bg_oval_white" />

    <ImageView
        android:id="@+id/iv_mosaic_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_select_common"
        android:padding="10dp"
        android:src="@drawable/bg_oval_white" />

    <ImageView
        android:id="@+id/iv_mosaic_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_select_common"
        android:padding="8dp"
        android:src="@drawable/bg_oval_white" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/contact_default_text" />


    <TextView
        android:id="@+id/tv_select_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_white_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_black_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_red_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/red" />

            <TextView
                android:id="@+id/tv_green_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/green" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_blue_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/blue" />

            <TextView
                android:id="@+id/tv_yellow_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/yellow" />

            <TextView
                android:id="@+id/tv_purple_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/purple" />


            <TextView
                android:id="@+id/tv_gray_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
